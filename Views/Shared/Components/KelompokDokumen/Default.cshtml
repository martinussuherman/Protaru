@namespace Protaru.ViewComponents.Rtr

@using Protaru.Components.Rtr

@model KelompokDokumenViewComponent.ViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Syncfusion.EJ2

@{
    int index = 0;
}

@foreach (var item in Model.KelompokDokumen)
{
    <hr>
    <h5 class="card-title">&nbsp; @item.Nomor . @item.Nama</h5>
    <hr>
    <div class="card-body row">

    @foreach (var detailItem in item.Dokumen)
    {
        <component type="typeof(EditDokumen)"
            render-mode="Static"
            param-Index="@index"
            param-Rtr="@Model.Rtr"
            param-Dokumen="@detailItem"
            param-Url="@Url" />

        index++;
    }

    </div>
}
