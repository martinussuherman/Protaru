@using Microsoft.AspNetCore.Mvc

@if( Dokumen.JumlahTindakLanjut > 0 )
{
    <TindakLanjutInputGroup
        Index="1"
        StatusYes="@Rtr.TL1StatusYes" 
        Keterangan="@Rtr.TL1Keterangan"
        FilePath="@Rtr.TL1FilePath"
        Url="@Url">
    </TindakLanjutInputGroup>

    <TindakLanjutInputGroup
        Index="2"
        StatusYes="@Rtr.TL2StatusYes" 
        Keterangan="@Rtr.TL2Keterangan"
        FilePath="@Rtr.TL2FilePath"
        Url="@Url">
    </TindakLanjutInputGroup>

    <TindakLanjutInputGroup
        Index="3"
        StatusYes="@Rtr.TL3StatusYes" 
        Keterangan="@Rtr.TL3Keterangan"
        FilePath="@Rtr.TL3FilePath"
        Url="@Url">
    </TindakLanjutInputGroup>

    <TindakLanjutInputGroup
        Index="4"
        StatusYes="@Rtr.TL4StatusYes" 
        Keterangan="@Rtr.TL4Keterangan"
        FilePath="@Rtr.TL4FilePath"
        Url="@Url">
    </TindakLanjutInputGroup>

    <TindakLanjutInputGroup
        Index="5"
        StatusYes="@Rtr.TL5StatusYes" 
        Keterangan="@Rtr.TL5Keterangan"
        FilePath="@Rtr.TL5FilePath"
        Url="@Url">
    </TindakLanjutInputGroup>
}

@code {
    [Parameter]
    public MonevAtr.Models.Atr Rtr { get; set; }

    [Parameter]
    public MonevAtr.Models.Dokumen Dokumen { get; set; }

    [Parameter]
    public IUrlHelper Url { get; set; }
}
