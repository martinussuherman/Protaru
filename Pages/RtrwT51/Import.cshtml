@page
@model ImportModel

@{
    ViewData["Title"] = "Impor Data RTRW T5-1";
}

<div class="page-header">
    <h1 class="page-title"></h1>
</div>
<div class="row row-cards text col-12 card">
    <div class="card-header">
        <h3 class="card-title"> Impor Data </h3>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="card-body row">
            <div class="col-md-12 form-group">
                <div class="custom-file">
                    <input asp-for="ImportFile" class="custom-file-input" accept=".xls,.xlsx" onchange="setfilename(this.value);" />
                    <label id="file-info" class="custom-file-label">Choose file</label>
                </div>
            </div>
            <div class="col-md-12 form-group">
                Contoh file impor RTRW T5-1 : <a href="/upload/contoh-impor/Contoh-Impor-RTRW-T5-1.xlsx">Unduh file</a>
            </div>
        </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary"><i class="fe fe-search"></i> Impor</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
    function setfilename(val)
    {
        var fileName = val.substr(val.lastIndexOf("\\")+1, val.length);
        document.getElementById("file-info").innerHTML = fileName;
    }
    </script>
}

