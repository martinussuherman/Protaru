@page
@model MonevAtr.Pages.Dokumen.CreateModel

@{
    ViewData["Title"] = "Tambah Dokumen";
}

<h1>Tambah Dokumen</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dokumen.Nama" class="control-label"></label>
                <input asp-for="Dokumen.Nama" class="form-control" />
                <span asp-validation-for="Dokumen.Nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dokumen.KodeKelompokDokumen" class="control-label"></label>
                <select asp-for="Dokumen.KodeKelompokDokumen" class ="form-control" asp-items="ViewBag.KodeKelompokDokumen"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Kembali ke Daftar Dokumen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
