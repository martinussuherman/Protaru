@page
@model MonevAtr.Pages.Dokumen.EditModel

@{
    ViewData["Title"] = "Ubah Dokumen";
}

<h1>Ubah Dokumen</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dokumen.Kode" />
            <input type="hidden" asp-for="Dokumen.JumlahTindakLanjut" />
            <input type="hidden" asp-for="Dokumen.AmbilNomor" />
            <div class="form-group">
                <label asp-for="Dokumen.Nama" class="control-label"></label>
                <input asp-for="Dokumen.Nama" class="form-control" />
                <span asp-validation-for="Dokumen.Nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dokumen.Nomor" class="control-label"></label>
                <input asp-for="Dokumen.Nomor" class="form-control" />
                <span asp-validation-for="Dokumen.Nomor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dokumen.KodeKelompokDokumen" class="control-label"></label>
                <select asp-for="Dokumen.KodeKelompokDokumen" class="form-control" asp-items="ViewBag.KelompokDokumen"></select>
                <span asp-validation-for="Dokumen.KodeKelompokDokumen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Kembali ke Daftar Dokumen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
