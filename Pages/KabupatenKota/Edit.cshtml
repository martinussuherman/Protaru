@page
@model EditModel

@{
    ViewData["Title"] = "Ubah Kabupaten/Kota";
}

<h1>Ubah Kabupaten/Kota</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KabupatenKota.Kode" />
            <div class="form-group">
                <label asp-for="KabupatenKota.Nama" class="control-label"></label>
                <input asp-for="KabupatenKota.Nama" class="form-control" />
                <span asp-validation-for="KabupatenKota.Nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KabupatenKota.KodeProvinsi" class="control-label"></label>
                <select asp-for="KabupatenKota.KodeProvinsi" class="form-control" asp-items="ViewBag.KodeProvinsi"></select>
                <span asp-validation-for="KabupatenKota.KodeProvinsi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Kembali ke Daftar Kabupaten/Kota</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
