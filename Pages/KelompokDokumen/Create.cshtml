@page
@model CreateModel

@{
    Layout = "_CommonLayout";
    ViewData["Title"] = "Tambah Kelompok Dokumen";
    ViewData["PageTitle"] = "Kelompok Dokumen";
}

<div class="card-body">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label class="control-label">Nama</label>
            <input asp-for="KelompokDokumen.Nama" class="form-control" />
            <span asp-validation-for="KelompokDokumen.Nama" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Nomor</label>
            <input asp-for="KelompokDokumen.Nomor" class="form-control" />
            <span asp-validation-for="KelompokDokumen.Nomor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Jenis RTR</label>
            <select asp-for="KelompokDokumen.KodeJenisAtr" class ="form-control" asp-items="ViewBag.JenisRtr"></select>
        </div>

        <input type="submit" value="Simpan" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-warning">Kembali</a>
    </form>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
