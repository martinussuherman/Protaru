        </a>
      </div>

@{
  pageName = SignInManager.IsSignedIn(User) ? "/RtrwT51/Index" : "/Rtrw/Perda";
}

      <div class="col-md-2 p-2">
        <a asp-page="@pageName" 
          class="btn btn-outline-success btn-block py-2 font-weight-bold" 
