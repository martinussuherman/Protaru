@page
@model IndexModel

@{
    Layout = Model.Layout;
}

<!doctype html>
<html lang="en">
  <head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/assets/css/style.css">
	<link rel="stylesheet" href="~/assets/css/slick.css"/>
	<link rel="stylesheet" href="~/assets/css/slick-theme.css"/>
	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

    <link rel="icon" href="~/favicon.ico" type="image/x-icon"/>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <title>@Model.Title - PROTARU</title>

	<!-- write your code here -->
    <link rel="stylesheet" href="~/css/screen.css" />
</head>

<body>
	<header class="text-center header-screen">
		<img src="~/assets/img/logo.png" class="mt-3">
	</header>

	<div class="banner-screen">
		<img src="~/assets/img/banner-screen.jpg" class="img-fluid" alt="Progress Penyelesaian Rencana Tata Ruang">
	</div>

	<div class="container">
		<div class="row mt-5">
			<div class="col-md-6">
				<a asp-page="/RtrIndex" asp-route-rtrType="1">
					<img src="~/assets/img/btn1.png" class="img-fluid">
				</a>
			</div>

			<div class="col-md-6">
				<a asp-page="/RtrIndex" asp-route-rtrType="2">
					<img src="~/assets/img/btn2.png" class="img-fluid">
				</a>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12 text-center">
				<div class="text-center mt-4 mb-5">
					
				</div>
			</div>
		</div>
	</div>
</body>
</html>