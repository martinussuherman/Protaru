@page
@model Protaru.PageModels.Search

@using MonevAtr.Models

@{
    Layout = "_RtrNasionalIndexLayout";
    ViewData["Title"] = "Pencarian RDTR KPN";
    ViewData["PageTitle"] = "RDTR KPN";
}

<form id="search-form">
    <div class="card-body">
        @await Component.InvokeAsync(
            "ProvinsiKabKota",
            new { isInput = false })

        <div class="col-md-12 form-group">
            <label class="form-label">Nama RTR</label>
            <input asp-for="Rtr.Nama" class="form-control" />
        </div>
        <div class="col-md-12 form-group">
            <label class="form-label">Nomor Perpres</label>
            <input asp-for="Rtr.Nomor" class="form-control" />
        </div>

        @await Component.InvokeAsync(
            "TahunSearch",
            new { jenisRtr = JenisRtrEnum.RtrKpnT51 })
        @await Component.InvokeAsync(
            "ProgressMultiSelect",
            new { jenisRtr = JenisRtrEnum.RtrKpnT51 })
    </div>

    <partial name="_SearchButton" model="true" />
</form>

@section Scripts 
{
    <script src="~/js/prov-kab-kota.js"></script>
}
