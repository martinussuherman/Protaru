@page
@model Protaru.PageModels.Search

@using MonevAtr.Models

@{
    Layout = "_RtrNasionalIndexLayout";
    ViewData["Title"] = "Pencarian RDTR KPN";
    ViewData["PageTitle"] = "RDTR KPN";
}

<form method="get" asp-page="./SearchResult">
    <div class="card-body">
        @await Component.InvokeAsync(
            "ProvinsiKabKota",
            new { isInput = false })

        <div class="col-md-12 form-group">
            <label class="form-label">Nama RTR</label>
            <input asp-for="Rtr.Nama" class="form-control" />
        </div>
        <div class="col-md-12 form-group">
            <label class="form-label">Nomor Perpres</label>
            <input asp-for="Rtr.Nomor" class="form-control" />
        </div>

        @await Component.InvokeAsync(
            "TahunSearch",
            new { jenisRtr = JenisRtrEnum.RtrKpnT51 })
        @await Component.InvokeAsync(
            "ProgressMultiSelect",
            new { jenisRtr = JenisRtrEnum.RtrKpnT51 })
    </div>

    <div class="card-footer text-center">
        <input 
            type="submit" 
            name="cari" 
            value="Cari" 
            class="btn btn-primary" 
            asp-page="./SearchResult" 
            formmethod="get" />
        @{await Html.RenderPartialAsync("_ExportData");}
        <a asp-page="./Index" class="btn btn-primary">Reset</a>
    </div>
</form>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_AjaxProvinsiScriptPartial");}
}
