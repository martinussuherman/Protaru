@page
@model Protaru.PageModels.Search

@{
    Layout = "_RtrNasionalIndexLayout";
    ViewData["Title"] = "Pencarian RTR Pulau/Kep";
    ViewData["PageTitle"] = "RTR Pulau/Kepulauan";
}

<form method="get" asp-page="./SearchResult">
    <input type="hidden" name="Rtr.Perda" value="0" />
    <input type="hidden" name="ReturnPage" value="./Progress" />

    <div class="card-body">
         @await Component.InvokeAsync(
            "Pulau",
            new { isInput = false })

        @* <div class="col-md-12 form-group">
            <label class="form-label">Nama RTR</label>
            <input asp-for="Rtr.Nama" class="form-control" />
        </div> *@
    </div>

    <div class="card-footer text-center">
        <input 
            type="submit" 
            name="cari" 
            value="Cari" 
            class="btn btn-primary" 
            asp-page="./SearchResult" 
            formmethod="get" />
        <a asp-page="./Index" class="btn btn-primary">Reset</a>
    </div>
</form>
