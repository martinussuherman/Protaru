@page
@model CreateModel

@{
    Layout = "_RtrDaerahLayout";
    ViewData["Title"] = "Input RDTR";
    ViewData["PageTitle"] = "RDTR";
}

<div class="page-title">
    <div class="container">
        <h4>@ViewData["PageTitle"]</h4>
    </div>
</div>

<div class="bg-page-detail">
	<div class="pt-4 pb-5">
        <div class="container">
            <div class="row row-cards card">
                <div class="card-header pl-5">
                    <h4 class="card-title mlm-15">@ViewData["Title"]</h4>
                </div>

                <form id="rtr" method="post">
                    <div class="card-body">
                        <div class="col-md-12 form-group">
                            <label class="form-label">Provinsi</label>
                            <select 
                                asp-for="Rtr.KodeProvinsi" 
                                id="provinsi" 
                                class ="form-control" 
                                asp-items="Model.Provinsi">
                            </select>
                        </div>

                        <div class="col-md-12 form-group">
                            <label class="form-label">Kabupaten/Kota</label>
                            <select 
                                asp-for="Rtr.KodeKabupatenKota" 
                                id="kabupaten-kota" 
                                class ="form-control" 
                                asp-items="Model.KabupatenKota">
                            </select>
                        </div>

                        @await Component.InvokeAsync(
                            "Create", 
                            new { rtr = Model.Rtr, displayAoi = true })
					</div>

                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-primary">Simpan</button>
                        <a asp-page="./Index" class="btn btn-primary">Kembali</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_AjaxProvinsiScriptPartial");}
}
