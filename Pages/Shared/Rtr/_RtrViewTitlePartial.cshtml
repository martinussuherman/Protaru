@using System.Collections.Generic
@using MonevAtr.Models

@model RtrDetail
@{
string title;

if (Model.Rtr.Pulau != null)
{
    title = Model.Rtr.DisplayNamaPulau;
}
else if (Model.Rtr.Kawasan != null)
{
    title = Model.Rtr.DisplayNamaKawasan;
}
else
{
    title = Model.Rtr.DisplayNamaProvinsi;
}
    
}

<h5 class="text-center text-orange text-title-rtr font-weight-bold text-uppercase">@title</h5>
<h4 class="text-center font-weight-bold text-detail-rtr">@Model.Rtr.DisplayNamaKabupatenKota</h4>
<h5 class="text-center text-detail-rtr">@Model.Rtr.Nama</h5>
<h5 class="text-center text-detail-rtr">Nomor: @Model.Rtr.Nomor</h5>

<div class="mt-2 tag-title-box-1">
    <div class="tag-title"><span>KETERANGAN</span></div>
</div>
