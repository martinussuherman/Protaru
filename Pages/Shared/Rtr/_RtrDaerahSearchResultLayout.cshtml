@{
    Layout = "_RtrDaerahLayout";
}

<div class="page-title">
    <div class="container">
        <h4>@ViewData["PageTitle"]</h4>
    </div>
</div>

<div class="bg-page-detail">
    <div class="container pt-4 pb-5">
        <div class="row row-cards card">
            <div class="card-header">
                <h4 class="card-title float-sm-left">@ViewData["Title"]</h4>
                <div class="ml-auto float-sm-right">

@if((bool) ViewData["IsCanCreate"])
{
                    <a asp-page="./Create" class="btn btn-success">Tambah</a>
}

                    <button class="btn btn-warning" onclick="window.history.back();">Kembali</button>
                    @* <a asp-page="@returnUrl" class="btn btn-warning">Kembali</a> *@
                </div>
            </div>

            @RenderBody()

        </div>
    </div>
</div>

@section Scripts 
{
    @RenderSection("Scripts", required: false)
}
