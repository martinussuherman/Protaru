@page "{id:int?}"
@model DeleteModel

@{
    Layout = "_CommonLayout";
    ViewData["Title"] = "Hapus Tugas User";
    ViewData["PageTitle"] = "Tugas User";
}

<div class="card-body">
    <div class="form-group">
        <label class="control-label">Id</label>
        <input asp-for="TugasUser.Id" class="form-control" disabled/>
    </div>

    <div class="form-group">
        <label class="control-label">User</label>
        <input asp-for="TugasUser.User" class="form-control" disabled/>
    </div>

    <div class="form-group">
        <label class="control-label">Jumlah</label>
        <input type="number" asp-for="TugasUser.Jumlah" class="form-control" disabled/>
    </div>

    <div class="form-group">
        <label class="control-label">Jumlah</label>
        <input 
            type="date" 
            name="TugasUser.BatasWaktu" 
            value="@Model.TugasUser.DisplayBatasWaktu" 
            class="form-control" 
            disabled/>
    </div>

    <form method="post">
        <input type="hidden" asp-for="TugasUser.Id" />
        <input type="submit" value="Hapus" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-warning">Kembali</a>
    </form>
</div>
