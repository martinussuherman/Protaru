@page "{id:int?}"
@model EditModel

@{
    Layout = "_CommonLayout";
    ViewData["Title"] = "Ubah Kawasan";
    ViewData["PageTitle"] = "Kawasan";
}

<div class="card-body">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Kawasan.Kode" />

        <div class="form-group">
            <label class="control-label">Nama</label>
            <input asp-for="Kawasan.Nama" class="form-control" />
            <span asp-validation-for="Kawasan.Nama" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Kabupaten/Kota #1</label>
            <select
                asp-for="KabupatenKota1.KodeKabupatenKota"
                class ="form-control"
                asp-items="ViewBag.KabupatenKota">
            </select>
        </div>

        <div class="form-group">
            <label class="control-label">Kabupaten/Kota #2</label>
            <select
                asp-for="KabupatenKota2.KodeKabupatenKota"
                class ="form-control"
                asp-items="ViewBag.KabupatenKota">
            </select>
        </div>

        <div class="form-group">
            <label class="control-label">Kabupaten/Kota #3</label>
            <select
                asp-for="KabupatenKota3.KodeKabupatenKota"
                class ="form-control"
                asp-items="ViewBag.KabupatenKota">
            </select>
        </div>

        <input type="submit" value="Simpan" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-warning">Kembali</a>
    </form>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
