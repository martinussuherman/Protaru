@page
@model MonevAtr.Pages.ProgressAtr.EditModel

@{
    ViewData["Title"] = "Ubah Progress ATR";
}

<h1>Ubah Progress ATR</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProgressAtr.Kode" />
            <div class="form-group">
                <label asp-for="ProgressAtr.Nama" class="control-label"></label>
                <input asp-for="ProgressAtr.Nama" class="form-control" />
                <span asp-validation-for="ProgressAtr.Nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgressAtr.Nomor" class="control-label"></label>
                <input asp-for="ProgressAtr.Nomor" class="form-control" />
                <span asp-validation-for="ProgressAtr.Nomor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgressAtr.KodeJenisAtr" class="control-label"></label>
                <select asp-for="ProgressAtr.KodeJenisAtr" class="form-control" asp-items="ViewBag.JenisAtr"></select>
                <span asp-validation-for="ProgressAtr.KodeJenisAtr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Kembali ke Daftar Progress ATR</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
