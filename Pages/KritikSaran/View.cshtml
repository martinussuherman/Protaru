@page "{id:int?}"
@model ViewModel

@{
    Layout = "_CommonLayout";
    ViewData["Title"] = "Detail Kritik & Saran";
    ViewData["PageTitle"] = "Kritik & Saran";
}

<div class="card-body">
    <div class="form-group">
        <label class="control-label">Nama</label>
        <input asp-for="Saran.Nama" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="control-label">Email</label>
        <input asp-for="Saran.Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="control-label">Isi</label>
        <textarea rows="10" asp-for="Saran.Isi" class="form-control" readonly></textarea>
    </div>

    <button class="btn btn-warning text-light" onclick="window.history.back();">Kembali</button>
</div>
