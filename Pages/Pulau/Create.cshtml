@page
@model CreateModel

@{
    Layout = "_CommonLayout";
    ViewData["Title"] = "Tambah Pulau";
    ViewData["PageTitle"] = "Pulau";
}

<div class="card-body">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label class="control-label">Nama</label>
            <input asp-for="Pulau.Nama" class="form-control" />
            <span asp-validation-for="Pulau.Nama" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Lintang</label>
            <input type="number" asp-for="Pulau.Lat" class="form-control" />
            <span asp-validation-for="Pulau.Lat" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Bujur</label>
            <input type="number" asp-for="Pulau.Long" class="form-control" />
            <span asp-validation-for="Pulau.Long" class="text-danger"></span>
        </div>

        <input type="submit" value="Simpan" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-warning">Kembali</a>
    </form>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
